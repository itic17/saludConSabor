<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--imagen de la receta-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="175dp"
                  android:orientation="vertical"
                  android:id="@+id/image_detailrecipe"
                  android:background="@mipmap/app_icon"
                  android:gravity="center"
                  android:layout_marginBottom="15dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/name_recipedetail"
                android:text="INGREDIENTES"
                android:textColor="@color/colorDark"/>
    </LinearLayout>

    <!--ingredientes-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENTES"
                    android:textColor="@color/colorDark"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredientes"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorGray"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="ingredientes"/>
        </LinearLayout>
    </LinearLayout>

    <!--preparacion-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PREPARACIÃ“N"
                    android:textColor="@color/colorDark"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/preparacion"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorGray"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="ingredientes"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/image_tablerecipe"
               app:srcCompat="@mipmap/app_icon">
    </ImageView>


</LinearLayout>