<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--imagen de la receta-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="190dp"
                  android:orientation="vertical"
                  android:id="@+id/image_detailrecipe"
                  android:background="@mipmap/app_icon"
                  android:gravity="center"
                  android:layout_marginBottom="15dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/name_recipedetail"
                android:background="#80ffffff"
                android:text="nombre de la receta"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/goboldregular"
                android:textColor="@color/colorDark"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/numeroderaciones"
            android:text="raciones"
            android:fontFamily="@font/bebasneueregular"
            android:textSize="15dp"
            android:textColor="@color/colorDark"/>
    <!--ingredientes-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENTES"
                    android:fontFamily="@font/bebasneueregular"
                    android:textSize="20dp"
                    android:textColor="@color/colorDark"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredientes"
                    android:textSize="13dp"
                    android:textColor="@color/colorDark"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/louisgeorgecafe"
                    android:text="ingredientes"/>
        </LinearLayout>
    </LinearLayout>

    <!--preparacion-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PREPARACIÃ“N"
                    android:fontFamily="@font/bebasneueregular"
                    android:textSize="20dp"
                    android:textColor="@color/colorDark"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/preparacion"
                    android:textSize="13dp"
                    android:textColor="@color/colorDark"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/louisgeorgecafe"
                    android:text="ingredientes"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView android:layout_width="250dp"
                   android:layout_height="300dp"
                   android:id="@+id/image_tablerecipe"
                   app:srcCompat="@mipmap/app_icon"
                   android:layout_marginTop="0dp">
        </ImageView>
    </LinearLayout>
</LinearLayout>