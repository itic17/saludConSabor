<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iunis.programacionmovil.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorDark"
                      android:paddingTop="10dp"
                      android:gravity="center|right"
                      android:paddingBottom="10dp"

                      android:paddingRight="10dp"
                      android:layout_marginBottom="22dp">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/buttonClose1"
                       android:src="@drawable/close"/>

        </LinearLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@mipmap/app_icon"
                android:id="@+id/logo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/colorDark"
                android:fontFamily="@font/adonais"
                android:text="@string/app_name_view"/>


        <ListView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/dataView_categories"
                  android:orientation="vertical"
                  android:layout_marginTop="20dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp">
        </ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>